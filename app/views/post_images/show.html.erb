<section class="sct-color-1 slice">
    <div class="container">
        <div class="row">
            <div class="col-md-12 post_images_container">
                <div class="post-item">
                    <div class="post-meta-top">
                        <div class="post-image">
                            <%# <a href="images/sample-post1.jpg" class="theater">
                <!-- <img src="images/sample-post1.jpg"> -->
                <%= image_tag('sample-post1.jpg') %>
                            <%# </a> %>
                            <!-- ３章で上記３行をコメントアウトし、以下の３行を挿入 -->
                            <%= attachment_image_tag @post_image, :image %>
                        </div>
                    </div>
                    <div class="post-content">
                        <!-- <h2 class="post-title">ここにタイトル</h2> -->
                        <!-- ３章で上記1行をコメントアウトし、以下の1行を挿入 -->
                        <h2 class="post-title">
                            <%= @post_image.shop_name %>
                        </h2>
                        <ul class="meta-info-cells v4 float-wrapper">
                            <li>
                                <i class="fa fa-user"></i>By
                                <!-- <a href="#">投稿者名</a> -->
                                <!-- ３章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                <a href="#">
                                    <%= @post_image.user.name %></a>
                            </li>
                            <li>
                                <!-- <i class="fa fa-calendar"></i>2017/07/21</li> -->
                                <!-- ３章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                <i class="fa fa-calendar"></i>
                                <%= @post_image.created_at.strftime('%Y/%m/%d') %>
                            </li>
                            <!-- ４章でここから記入 -->
                            <% if @post_image.favorited_by?(current_user) %>
                            <li>
                                <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
                                <!-- <i class="fa fa-heart"></i> -->
                                <i class="fa fa-heart" aria-hidden="true" style="color: red" ;></i>
                                <!-- <a href="#">202 いいね</a> -->
                                <%= @post_image.favorites.count %>いいね
                                <% end %>
                            </li>
                            <% else %>
                            <li>
                                <%= link_to post_image_favorites_path(@post_image), method: :post do %>
                                <i class="fa fa-heart-o" aria-hidden="true"></i>
                                <%= @post_image.favorites.count %>いいね
                                <% end %>
                            </li>
                            <% end %>
                            <!-- ４章ここまで -->
                            <!-- 4章で以下の1行を挿入 -->
                            <a href="#comments">
                            <li>
                                <i class="fa fa-comment"></i>
                                <a href="#comments"><%= @post_image.post_comments.count %></a>
                            </li>
                            <!-- ５章ここに追加 -->
                            <li>
                                <% if @post_image.user == current_user %>
                                <%= link_to "削除", post_image_path(@post_image), method: :delete %>
                                <% end %>
                            </li>
                        </ul>
                        <div class="post-content-inner mt-20">
                            <!-- <p>ここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキストここにテキスト</p> -->
                            <!-- ３章で上記1行をコメントアウトし、以下の1行を挿入 -->
                            <p>
                                <%= @post_image.caption %>
                            </p>
                        </div>
                    </div>
                    <div class="comment-list bt style-2" id="comments">
                        <div class="float-wrapper">
                            <!-- <h2 class="comment-count">4件コメント</h2> -->
                            <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                            <h2 class="comments-count">
                                <%= @post_image.post_comments.count %>件コメント</h2>
                        </div>
                        <ol>
                            <!-- 4章で以下の1行を挿入 -->
                            <% @post_image.post_comments.each do |post_comment| %>
                            <li class="comment">
                                <div class="comment-body bb">
                                    <div class="comment-avatar">
                                        <div class="avatar">
                                            <!-- <img src="images/sample-author1.jpg"> -->
                                            <%#<%= image_tag('sample-author1.jpg') %>
                                            <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                            <%= image_tag('sample-author1.jpg', style: "width: 60px; height: 60px") %>
                                        </div>
                                    </div>
                                    <div class="comment-text">
                                        <div class="comment-author clearfix">
                                            <!-- <a href="#">投稿者名</a> -->
                                            <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                            <a href="#" class="link-author">
                                                <%= post_comment.user.name %></a>
                                            <span class="comment-meta">
                                                <!-- <span class="comment-date">2017/07/21</span> -->
                                                <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                                <span class="comment-date">
                                                    <%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
                                            </span>
                                        </div>
                                        <div class="comment-entry">
                                            <!-- コメントがここに表示されますコメントがここに表示されますコメントがここに表示されますコメントがここに表示されますコメントがここに表示されますコメントがここに表示されますコメントがここに表示されます -->
                                            <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                                            <%= post_comment.comment %>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <% end %>
                        </ol>
                    </div>
                    <hr>
                    <!-- Add comment section -->
                    <div class="section-title-wrapper style-1 v1 mt-30" id="divAddComment">
                        <h3 class="section-title left">
                            <span>コメント</span>
                        </h3>
                    </div>
                    <!-- <form class="mt-20"> -->
                    <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                    <%= form_for [@post_image, @post_comment] do |f| %>
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- <textarea class="form-control" rows="5" placeholder="コメントをここに"></textarea> -->
                            <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                        </div>
                    </div>
                    <!-- <button type="submit" class="btn btn-lg btn-base-1 mt-20 pull-right">送信する</button>
                    </form> -->
                    <!-- 4章で上記1行をコメントアウトし、以下の1行を挿入 -->
                    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>